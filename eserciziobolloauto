<body>
<h1 id="titolo">Scopri se devi pagare il bollo auto</h1>
<div class="box">
  <label>Inserisci la tua città (ostia, rho, capri)</label><br>
  <input type="text" id="citta"><br>
  <label>Inserisci la tua macchina (panda, clio, yaris)</label><br>
  <input type="text" id="auto"><br>
  <input class="button" type="submit" onclick="trovaprovincia()">
</div>

<p id="risultato"></p>
<p id="scrivoqui"></p>

<script>
function trovaprovincia() {

    //l'utente inserisce la citta dentro la casella di input "la tua citta" 
    // creo le due variabili citta e auto
    let varcitta = citta.value.trim().toLowerCase();
    let varauto = auto.value.trim().toLowerCase();
    let provincia = "";

    //con if ed else if trovo la provincia in base a la citta inserita
    if (varcitta == "ostia") {
        provincia = "Roma (RM)";
    } else if (varcitta == "rho") {
        provincia = "Milano (MI)";
    } else if (varcitta == "capri") {
        provincia = "Napoli (NA)";
    } else {
        risultato.innerHTML = "Città non valida!";
        scrivoqui.innerHTML = "";
        document.body.style.backgroundColor = "lightred"; 
        return;
    }

    // inizia la parte di switch case dove l utente inserisce la sua auto
    risultato.innerHTML = "Provincia: " + provincia;

    switch(varauto) {
    case "panda":
        scrivoqui.innerHTML = "Con la Panda NON devi pagare il bollo.";
        document.body.style.backgroundColor = "lightgreen"; 
        break;
    case "clio":
        scrivoqui.innerHTML = "Con la Clio devi pagare il bollo.";
        document.body.style.backgroundColor = "lightcoral"; 
        break;
    case "yaris":
        scrivoqui.innerHTML = "Con Yaris devi pagare il bollo.";
        document.body.style.backgroundColor = "lightcoral"; 
        break;
    default:
        scrivoqui.innerHTML = "Auto non riconosciuta!";
        document.body.style.backgroundColor = "pink";
        break; 
}

    }
</script>

</body>
