    <h1>l area del quadrato di cui hai inserito i dati misura</h1>
<script>
//dichiarazione di una variabile e assegnazione del valore
var lato = Number(prompt("inserici la lunghezza del lato del quadrato",""));
//la variabile lato restituisce un testo(stringa) ma usando
// la funzione
function area(){
var calcolo_area = lato * lato;
//la funzione retuituera lato multiplicato per lato
return calcolo_area;
}
//output
document.write( "l area Ã¨:" + area() + " cm" );

</script>

